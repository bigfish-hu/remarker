<div id="feedback-highlighter">
    <div class="feedback-logo">{{ text.title }}</div>

    <p>{{ text.highlight_instructions }}</p>

    <button class="feedback-sethighlight feedback-active">
        <div class="ico"></div>
        <span>{{ text.highlight }}</span>
    </button>
    <label>{{ text.highlight_instructions_bug }}</label>

    <button class="feedback-setblackout">
        <div class="ico"></div>
        <span>{{ text.clear }}</span>
    </button>
    <label class="lower">{{ text.clear_personal_data }}</label>
    <div class="feedback-buttons">
        <button id="feedback-highlighter-next" class="feedback-next-btn feedback-btn-gray">{{ text.next }}</button>
        <button id="feedback-highlighter-back" class="feedback-back-btn feedback-btn-gray">{{ text.back }}</button>
    </div>
    <div class="feedback-wizard-close"></div>
</div>
